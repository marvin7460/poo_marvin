 <style>

        /* Estilos comunes para las tablas */
        .tabla {
            width: 50%;
            margin: 2% auto;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }

        .tabla thead th {
            background-color: #4CAF50; /* Verde para encabezados */
            color: white;
            text-align: center;
            height: auto;
            padding: 3px;
            font-size: 1.1em;
        }

        .tabla tbody td {
            border: 7px solid #ddd;
            padding: 8px;
            text-align: left;
            vertical-align: 10%;
        }

        .tabla tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        .tabla tbody tr:hover {
            background-color: #ddd;
        }

        /* Estilos específicos para la tabla de profesor */
        .tabla-profesor {
            margin-top:5%; /* Espaciado para la primera tabla */
        }

        .tabla-profesor .titulo-tabla th {
            background-color: #d00000;
            font-size: 24px; /* Aumenta el tamaño de la fuente según tus necesidades */
        }

        .tabla-profesor .encabezado-tabla {
            background-color: #ffd700; /* Dorado para encabezados */
            font-weight: bold;
        }

        /* Ajustar el espaciado entre las tablas */
        .tabla-profesor + .tabla-clases {
            margin-top: 5%; /* Espacio entre las tablas */
        }

        /* Estilos específicos para la tabla de clases */
        .tabla-clases tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        /* Si necesitas ocultar algún enlace específico */
        .LinkBuscar {
            display: none;
        }
    </style>

     <!-- Tabla de Datos del Profesor -->
    <div class="tabla-profesor">
        <table class="tabla">
             <tr class="titulo-tabla">
      <th colspan="4">DATOS DEL ESTUDIANTE</th>
            </tr>
            <tr>
              <td class="encabezado-tabla">Código:</td>
              <td>
                {{usuario.codigo}}
              </td> <!-- Data goes here -->
              <td class="encabezado-tabla">Nombre:</td>
              <td>
                {{usuario.nombre}}
              </td> <!-- Data goes here -->
            </tr>
            <tr>
              <td class="encabezado-tabla">Situación:</td>
              <td>
                {{usuario.situacion}}
              </td> <!-- Data goes here -->
              <td class="encabezado-tabla">Nivel:</td>
              <td>
                {{usuario.nivel}}
              </td> <!-- Data goes here -->
            </tr>
            <tr>
              <td class="encabezado-tabla">Carrera:</td>
              <td>
                {{usuario.carrera}}
              </td> <!-- Data goes here -->
              <td class="encabezado-tabla">Período:</td>
              <td>
                {{usuario.periodo}}
              </td> <!-- Data goes here -->
            </tr>
            <tr>
              <td class="encabezado-tabla">Centro:</td>
              <td>
                {{usuario.centro}}
              </td> <!-- Data goes here -->
              <td class="encabezado-tabla">Sede:</td>
              <td>
                {{usuario.sede}}
              </td> <!-- Data goes here -->
            </tr>
            <!-- Los placeholders deben ser reemplazados por tus datos dinámicos -->
        </table>
    </div>

    <!-- Tabla de Clases -->
    <div class="tabla-clases">
        <table class="tabla">
            <thead>
                <tr>
                    <th>NRC</th>
                    <th>Nombre de la materia</th>
                    <th>Salón</th>
                    <th>Profesor</th>
                    <th>Horario</th>
                    <th>Días</th>
                </tr>
            </thead>
            <tbody>
                {{#each clases}}
                <tr>
                  <td>{{this.nrc}}</td>
                  <td>{{this.nombre}}</td>
                  <td>{{this.salon}}</td>
                  <td>{{this.maestro}}</td>
                  <td>{{this.horario}}</td>
                  <td>{{this.dias}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
     <div style="text-align: center; margin-top: 20px;">
        <button onclick="window.history.back();" class="regresar-boton">Regresar</button>
    </div>

    <style>
        /* ... (otros estilos) ... */

        /* Estilos para el botón de regresar */
        .regresar-boton {
            padding: 10px 20px;
            margin-top: 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #4CAF50; /* Color verde para el botón */
            color: white;
            border: none;
            border-radius: 5px; /* Bordes redondeados para el botón */
            box-shadow: 0 2px 5px rgba(0,0,0,0.2); /* Sombra sutil para el botón */
            transition: background-color 0.3s ease; /* Transición suave al cambiar el color */
        }

        .regresar-boton:hover {
            background-color: #45a049; /* Color un poco más oscuro al pasar el ratón */
        }

        /* ... (otros estilos) ... */
    </style>

    <script>
        // Función para el botón de regresar que podría personalizarse si es necesario
        function regresar() {
            window.history.back();
        }
    </script>



<style>
  body, html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: #fff; /* Change the background color if needed */
  }

  .tabla-centrada {
    display: block;
    max-width: 50%; /* Adjust the width as needed */
    width: 100%;
    margin: 0 auto;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); /* Sombra sutil para dar profundidad */
    margin-top: 5%; /* You can change this to adjust vertical positioning */
  }

  table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed; /* This helps in maintaining equal column widths */
  }

  td, th {
    border: 1px solid black;
    padding: 8px;
    text-align: left;
    background-color: #fffacd; /* Light yellow background */
  }

  /* Header styles */
  .encabezado-tabla {
    background-color: #ffd700; /* Gold color for headers */
    color: black;
    font-weight: bold;
  }

  /* Title row styles */
  .titulo-tabla th {
    background-color: #d00000; /* Red background for title */
    color: white;
    text-align: center;
    padding: 8px 0; /* Adjust padding to control the height of the title row */
  }
  .LinkBuscar{
      display: none;
    }

  /* Estilos específicos para la tabla de clases */
  .tabla-clases {
    width: 50%; /* Ajusta el ancho que prefieras */
    margin: 2% auto 0; /* Espacio arriba y centrado horizontalmente */
    border-collapse: collapse; /* Elimina el espacio entre bordes de celdas */
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); /* Sombra sutil para dar profundidad */
    background-color: #ffffff; /* Fondo blanco para contraste */
  }

  /* Estilos para los encabezados de la tabla de clases */
  .tabla-clases thead th {
    background-color: #4CAF50; /* Color verde para los encabezados */
    color: white; /* Texto en blanco */
    text-align: center;
    padding: 10px;
    font-size: 1.1em; /* Un poco más grande para destacar */
  }

  /* Estilos para las celdas de la tabla de clases */
  .tabla-clases tbody td {
    border: 1px solid #ddd; /* Bordes más suaves */
    padding: 8px; /* Espaciado dentro de las celdas */
    text-align: left; /* Alinea el texto a la izquierda */
    vertical-align: middle; /* Alinea verticalmente el contenido en las celdas */
  }

  /* Estilos para las filas alternas de la tabla de clases para mejorar la legibilidad */
  .tabla-clases tbody tr:nth-child(odd) {
    background-color: #f2f2f2; /* Fondo más claro para filas impares */
  }

  /* Estilos para el hover de las filas */
  .tabla-clases tbody tr:hover {
    background-color: #ddd; /* Color al pasar el ratón por encima */
  }

  /* Ajustar el espaciado entre tablas */
  .tabla-centrada + .tabla-clases {
    margin-top: 2%; /* Añade un espacio entre las tablas */
  }
</style>

<div class="tabla-centrada">
  <table>
    <tr class="titulo-tabla">
      <th colspan="2">DATOS DEL PROFESOR</th>
    </tr>
    <tr>
      <td class="encabezado-tabla">Nombre completo:</td>
      <td>{{usuario.nombreCompleto}}</td>
    </tr>
    <tr>
      <td class="encabezado-tabla">Nacionalidad:</td>
      <td>{{usuario.nacionalidad}}</td>
    </tr>
    <tr>
      <td class="encabezado-tabla">Títulos académicos:</td>
      <td>
        {{#each usuario.titulosAcademicos}}
          {{this.titulo}} en {{this.institucion}} (Obtenido en: {{this.fechaObtencion}})
          <br>
        {{/each}}
      </td>
    </tr>
    <tr>
      <td class="encabezado-tabla">Cursos o materias que imparte:</td>
      <td>
        {{#each usuario.cursosImpartidos}}
          {{nombreCurso}} (Código: {{this.codigoCurso}})
          <br>
        {{/each}}
      </td>
    </tr>
    <tr>
      <td class="encabezado-tabla">Departamento o facultad:</td>
      <td>{{usuario.departamentoFacultad}}</td>
    </tr>
    <tr>
      <td class="encabezado-tabla">Código:</td>
      <td>{{usuario.codigo}}</td>
    </tr>
  </table>
</div>

<table class="tabla-clases">
  <thead>
    <tr>
      <th>NRC</th>
      <th>Nombre de la materia</th>
      <th>Salon</th>
      <th>Profesor</th>
      <th>Horario</th>
      <th>Dias</th>
    </tr>
  </thead>
  <tbody>
    {{#each clases}}
    <tr>
      <td>{{this.nrc}}</td>
      <td>{{this.nombre}}</td>
      <td>{{this.salon}}</td>
      <td>{{this.maestro}}</td>
      <td>{{this.horario}}</td>
      <td>{{this.dias}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
